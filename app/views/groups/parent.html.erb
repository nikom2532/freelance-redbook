<p id="notice"><%= notice %></p>
<p>
  <h3>Add Parentgroups</h3>
  <b>Name:</b><%= @this_group.name %>
</p>

<b>All Group List</b>
<table>
	<tr>
	    <th>Name</th>
	    <th>Kind</th>
	</tr>
	<% if @groups.size > 0 %>
		<% @groups.each do |all_group| %>
	  	<tr>
	    	<td><%= all_group.name %></td>
	    	<td><%= all_group.kind %></td>
			<td><%= link_to "Add Parentgroups", :controller => "groups", :action => "addpar", :id => @this_group.id , :pid => all_group.id %></td>
	  	</tr>
		<% end %>
	<% else %>
		<tr>
	    	<td>Empty List</td>
	  	</tr>
	<% end %>
</table>

<b>Parent Group List</b>
<table>
	<tr>
	    <th>Name</th>
	    <th>Kind</th>
	</tr>
	<% if @this_group.parentgroups != nil %>
		<% this_par = @this_group.parentgroups %>
	  	<tr>
	    	<td><%= this_par.name %></td>
	    	<td><%= this_par.kind %></td>
			<td><%= link_to "Remove", :controller => "groups", :action => "rmpar", :id => @this_group.id , :pid => this_par.id %></td>
	  	</tr>
	<% else %>
		<tr>
	    	<td>Empty List</td>
	  	</tr>
	<% end %>
</table>


<%= link_to 'Back', groups_path %>