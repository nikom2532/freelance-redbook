<p>
  <b>Member:</b>
  <%= @group.users.size %>
</p>
<b>Member List</b>
<table>
	<tr>
	    <th>Name</th>
	    <th>Email</th>
	    <th></th>
	  </tr>
	<% if @group.users.size > 0 %>
		<% @group.users.each do |mem| %>
	  		<tr>
		    	<td><%= mem.displayname %></td>
				<td><%= mem.email %></td>
				<td><%= link_to "Remove", :controller => "groups", :action => "rmuser", :id => @group.id , :uid => mem.id %></td>
		  	</tr>
		<% end %>
	<% else %>
		<tr>
	    	<td>Empty List</td>
			<td></td>
			<td></td>
	  	</tr>
	<% end %>
</table>
<%= link_to "Add Member", :controller => "groups", :action => "mem", :id => @group.id %>
<br />
<%= render 'modlist' %>
<br/>
<%= render 'addmod' %>