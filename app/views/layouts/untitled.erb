<nav class="top-bar">
      <ul>
        <!-- Title Area -->
        <li class="name">
          <h1>
            <%= link_to "Redbook", root_path, :class => 'brand no-padding-left' %>
          </h1>
        </li>
        <li class="toggle-topbar"><a href="#"></a></li>
      </ul>

      <section>
        <!-- Left Nav Section -->
        <ul class="left">
          
          <% unless user_signed_in? %>
          <li class="divider"></li>
          <li><%= link_to "WhatIs", what_path %></li>
          <li class="divider hide-for-small"></li>
          <li><%= link_to "LIP", lip_path %></li>
          <li class="divider hide-for-small"></li>
          <% end %>
          <li class="search">
            <form>
              <input type="search">
            </form>
          </li>
        </ul>


        <!-- Right Nav Section -->
        <ul class="right">
          <li class="divider hide-for-small"></li>
          <% if user_signed_in? %>
            <li><%= link_to "Projects", root_path %></li>
          <% else %>
            <li><%= link_to "Projects", projects_path %></li>
          <% end %>
          <% if user_signed_in? %>
          <li class="divider show-for-medium-and-up"></li>
          <li><%= link_to "API", api_path %></li>
          <li class="divider show-for-medium-and-up"></li>
          <li class="has-dropdown">
            <a href="#">Account</a>
            <ul class="dropdown">
              <li><label><%= current_user.title.titleize %></label></li>
              <li><%= link_to 'Edit', edit_user_registration_path %></li>
              <li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
              <li class="divider"></li>
              <li><a href="#">See all &rarr;</a></li>
            </ul>
          </li>
          <% else %>
          <li class="divider show-for-medium-and-up"></li>
          <li>
            <a data-reveal-id="LoginModal">Sign in</a>
          </li>
          <li class="divider show-for-medium-and-up"></li>
          <li>
            <a data-reveal-id="RegisModal">Sign up</a>
          </li>
          <% end %>
        </li>
        <li class="divider show-for-medium-and-up"></li>
      </ul>
    </section>
  </nav>

  <div id="LoginModal" class="reveal-modal [expand, xlarge, large, medium, small]appl">
  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>
    <%= f.text_field :login, :autofocus => true %></div>

    <div>
      <%= f.password_field :password %></div>

      <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> </div>
      <% end -%>

      <div><%= f.submit "Sign in" %></div>
      <% end %>

    </div>

<div id="RegisModal" class="reveal-modal [expand, xlarge, large, medium, small]appl">
      <h2>Sign up</h2>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <%= f.text_field :username %></div>
      <div>
        <%= f.email_field :email %></div>

        <div>
          <%= f.password_field :password %></div>

          <div>
            <%= f.password_field :password_confirmation %></div>

            <div><%= f.submit "Sign up" %></div>
            <% end %>
</div>
















