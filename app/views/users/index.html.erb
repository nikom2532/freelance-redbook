<h3>Users</h3>
<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.displayname, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <!-- <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td> !-->
	  <td><%= user.title %></td>

    </tr>
  <% end %>
  </tbody>
</table>
</div>
