<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="row">
    <div class="small-3 columns">
      <%= f.label :username %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :username, required: true %>
    </div> 
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :firstname %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :firstname, required: true%>
    </div> 
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :lastname %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :lastname, required: true%>
    </div> 
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :email %>
    </div>
    <div class="small-9 columns">
      <%= label_tag params[:email] %>
      <%= f.email_field :email, value: params[:email], required: true, type: "hidden"%>
    </div> 
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :password %>
    </div>
    <div class="small-9 columns">
      <%= f.password_field :password, required: true%>
    </div> 
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :password_confirmation %>
    </div>
    <div class="small-9 columns">
      <%= f.password_field :password_confirmation, required: true%>
    </div> 
  </div>

  <div class="row hide">
    <div class="small-3 columns">
      <%= f.label :invitation_token %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :invitation_token, value: params[:invitation_token], required: true , type: "hidden"%>
    </div> 
  </div>

  <div><%= f.submit "Sign up" , class: "secondary button"%></div>
<% end %>

<%= render "devise/shared/links" %>
